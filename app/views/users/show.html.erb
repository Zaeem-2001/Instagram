<%=image_tag (@user.image), size: "100x100" %>
<br>
<%= @user.full_name%>
<br>
@<%= @user.username%>

<%# Stories %>
<div>
<p>Stories</p>
<% @story=@user.stories.all%>
<% @story.each do |story| %>
<%= render 'stories/story' , story: story%>
<% end%>
</div>




<br>
<%= link_to 'Create a new Post' , new_post_path if @user==current_user %>
<br>
<%= link_to 'Create a new Story' ,  new_story_path if @user==current_user %>
<br>
<%= link_to 'Edit Account' , edit_user_registration_path if @user==current_user %>

<br>
<br>
<h2>Posts</h2>
<% @posts.each do |p|%>
<div class="container border">
  <br>
  <%= link_to 'Edit Post' , edit_post_path(p) if @user==current_user %>
  <%= link_to 'Delete Post' , post_path(p), method: :delete if @user==current_user %>
  <br>
    <%= p.caption%>
<br>
  <% p.images.each do |image|%>
  <%=image_tag (image), size: "100x100" %>
  <%end%>
  </div>
<%end%>


