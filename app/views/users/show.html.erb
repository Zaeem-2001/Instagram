<div class="conatiner user">
  <div class="row">
    <div class="col-sm-4 user-image">
      <%=image_tag (@user.image), class: 'rounded-circle' , size: "150x150" %>
    </div>
    <div class="col-sm-8">
      <div class="row user-username">
        <h2><%= @user.username%> <%= link_to 'Edit Profile' , edit_user_registration_path, class: 'btn btn-light border' if @user==current_user %></h2>
      </div>
      <div class="row user-username">
        <ul >
          <li><%= @user.posts.count%> <%= (@user.posts.count) == 1 ? 'Post' : 'Posts' %></li>
          <li>followers</li>
          <li>following</li>
        </ul>
      </div>
      <div class="row user-username">
        <span><%= @user.full_name%></span>
      </div>
    </div>
  </div>

  <section >
    <% if @user.id != current_user.id %>
    <% if current_user.followees.include?(@user) %>
        <h5><%= button_to "Unfollow", unfollow_user_path, method: "POST" %></h5>
    <% else %>
        <h5><%= button_to "Follow", follow_user_path, method: "POST"  %></h5>
        <%end%>
    <% end%>

    <br>
</section>

  <% @story=@user.stories.all%>
  <div class="stories-container">
    <% @story.each do |s| %>
    <%= link_to story_path(s) do%>
      <div class="content">
        <%= image_tag (s.image)  if s.image.attached? %>
      </div>
    <% end %>
    <%end%>
    <div class="content">
    <%= link_to  new_story_path do %>
      <%= image_tag('plus.png')%>
    <%end%>
    </div>
  </div>

  <br>
  <%= link_to 'Create a new Post' , new_post_path if @user==current_user %>
  <br>
  <%= link_to 'Create a new Story' ,  new_story_path if @user==current_user %>
  <br>
  <%= link_to 'Edit Account' , edit_user_registration_path if @user==current_user %>
  <br>
  <br>
  <h2>Posts</h2>
  <% @posts.each do |p|%>
    <div class="container border">
      <br>
      <%= link_to 'Edit Post' , edit_post_path(p) if @user==current_user %>
      <%= link_to 'Delete Post' , post_path(p), method: :delete if @user==current_user %>
      <br>
      <%= p.caption%>
      <br>
      <% p.images.each do |image|%>
        <%=image_tag (image), size: "100x100" %>
      <%end%>
    </div>
  <%end%>
</div>
