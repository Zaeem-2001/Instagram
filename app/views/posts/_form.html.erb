<%= form_with model: @post, local: true do |f| %>

<div class="field">
    <%= f.label :caption %><br />
    <%= f.text_area  :caption , autofocus: true, autocomplete: "caption" %>
</div>

<div class="field">
    <%= f.label :images %><br />
    <%= f.file_field :images , accept:'image/*',multiple: true,autofocus: true, autocomplete: "image" %>
  </div>

<div class="actions">
    <%= f.submit  %>
  </div>
<%end%>
