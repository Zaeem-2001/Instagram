<h1>New Story</h1>

<%= form_with model: @story, local: true do |f| %>

<div class="field">
    <%= f.label :caption %><br />
    <%= f.text_area  :caption , autofocus: true, autocomplete: "caption" %>
</div>

<div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image , accept:'image/*',autofocus: true, autocomplete: "image" %>
  </div>

<div class="actions">
    <%= f.submit  %>
  </div>
<%end%>
