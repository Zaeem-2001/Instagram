
<% comments.each do |comment|%>
<p>
  <strong><%= comment.user.username%></strong>
  [<%=  time_ago_in_words(comment.created_at) + ' ago'%>]:
  <%= comment.body %>
</p>
<p>
  <%= link_to 'Destroy', post_comment_path(@post, comment), method: :delete ,remote: true,class: 'btn btn-danger'    if policy(comment).destroy? %>
  <%= link_to 'Edit', edit_post_comment_path(@post, comment) ,class: 'btn btn-primary' if policy(comment).edit? %>

</p>
<hr>
<%end%>


