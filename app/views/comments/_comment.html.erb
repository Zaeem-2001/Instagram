
<% comments.each do |comment|%>
<p>
  <strong><%= comment.user.username%></strong>
  [<%=  time_ago_in_words(comment.created_at) + ' ago'%>]:
  <%= comment.body %>
</p>
<p>

  <%= link_to 'Destroy', post_comment_path(@post, comment), method: :delete ,class: 'btn btn-danger' if comment.user_id == current_user.id ||  comment.post.user_id == current_user.id %>

</p>
<hr>
<%end%>


